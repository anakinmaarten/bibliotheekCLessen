<UserControl x:Class="bibliotheek.WPF.Views.EditBookDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:bibliotheek.WPF.Views" xmlns:components="clr-namespace:bibliotheek.WPF.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- page header time ... Look in App.xmal for my syles hehe -->
        <TextBlock  
                Style="{StaticResource PageHeader}"
                Grid.Row="0"
                VerticalAlignment="Center"
                Margin="30 0 0 0"
                Text="Edit een boek:" />

        <!-- import Components and then specifiekly BookDetailsForm.xaml ... yes its looking sexy i know -->
        <components:BookDetailsForm Grid.Row="1" Margin="0 20 0 0"/>
        
    </Grid>
</UserControl>
